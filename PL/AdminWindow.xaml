<Window x:Class="PL.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500*"/>
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <Button Content="Orders" Grid.Column="1" Name="btnOrders" Template="{StaticResource ButtonTemplate1}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="47" Width="114" Click="btnOrders_Click" Margin="0,170,0,0"/>
        <Button Content="Products" Grid.Column="1" Name="btnProducts" Template="{StaticResource ButtonTemplate1}" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="47" Width="114" Click="btnProducts_Click" Margin="0,217,0,0"/>
        <Grid.Background>
            <ImageBrush ImageSource="/images/macbook.png" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Window>
